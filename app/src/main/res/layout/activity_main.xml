<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <woowacourse.paint.CustomView
        android:id="@+id/paint_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/range_slider"/>


    <com.google.android.material.slider.RangeSlider
        android:id="@+id/range_slider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:valueFrom="1"
        android:valueTo="100"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/btn_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_red"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@color/red"
        android:padding="0dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_orange"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_orange"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@color/orange"
        android:padding="0dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@id/btn_red"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/btn_yellow"
        app:layout_constraintStart_toEndOf="@id/btn_red"
        app:layout_constraintTop_toTopOf="@id/btn_red" />

    <Button
        android:id="@+id/btn_yellow"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@color/yellow"
        android:padding="0dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@id/btn_red"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/btn_green"
        app:layout_constraintStart_toEndOf="@id/btn_orange"
        app:layout_constraintTop_toTopOf="@id/btn_red" />

    <Button
        android:id="@+id/btn_green"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@color/green"
        android:padding="0dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@id/btn_red"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/btn_blue"
        app:layout_constraintStart_toEndOf="@id/btn_yellow"
        app:layout_constraintTop_toTopOf="@id/btn_red" />

    <Button
        android:id="@+id/btn_blue"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@color/blue"
        android:padding="0dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@id/btn_red"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_green"
        app:layout_constraintTop_toTopOf="@id/btn_red" />

</androidx.constraintlayout.widget.ConstraintLayout>